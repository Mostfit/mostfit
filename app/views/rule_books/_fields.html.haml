%table
  %tr
    %td 
      Rule Name
    %td
      = text_field :name
  %tr
    %td
      Action
    %td
      = select :action


  %tr
    %td
      Credit Account Name
    %td
      = select :credit_account_id, :collection => Account.all.map{ |x| [x.id ,x.name]}, :prompt => "Select credit Account"
  %tr
    %td
      Debit Account Name 
    %td
      = select :debit_account_id, :collection => Account.all.map{ |x| [x.id, x.name]}, :prompt => "Select debit Account"
  %tr 
    %td
      Branch
    %td
      = select :branch_id, :collection => Branch.all.map{ |x| [x.id, x.name]}, :prompt => "Select Branch"
