- form_url   = resource(@branch, @center, {:return => params[:return]})
- cancel_url = params[:return] ? params[:return] : resource(@branch, @center)

= form_for(@center, :action => form_url, :class => "form") do
  %h1== Edit the '#{@center.name}' center
  = error_messages_for @center
  %fieldset
    = partial "centers/fields"
    = submit "Save Changes"
    &nbsp;&nbsp;&nbsp;
    %b
      Or
    &nbsp;&nbsp;&nbsp;
    = link_to 'Cancel', cancel_url, :class => "grey_button"