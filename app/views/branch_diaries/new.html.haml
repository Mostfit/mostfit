- form_url = resource(:branch_diaries, {:return => params[:return]})
= error_messages_for @branch_diary

= form_for(@branch_diary, :action => form_url, :class => "") do

  %fieldset
    = partial "branch_diaries/fields"
    = submit "Submit Details"
    - if @branch
      = link_to 'Cancel', url(:quick_link, "branches", @branch.id)
    - else
      = link_to 'Cancel', url(:branch_diaries)