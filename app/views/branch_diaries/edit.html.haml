- form_url   = resource(@branch_diary, {:return => params[:return]})
= error_messages_for @branch_diary

= form_for(@branch_diary, :action => form_url, :class => "form") do
  %h1 Edit the branch diary details
  %fieldset
    = partial "branch_diaries/fields"
    = submit "Save changes"
    = cancel 'Cancel', url(:branch_diaries)

= link_to 'Show', url(:branch_diary, @branch_diary)
|
= link_to 'Back', url(:branch_diary, @branch_diary)

