%table.form
  %tr
    %td
      Fee Name
    %td
      = text_field :name
  %tr
    %td
      Payable on
    %td
      = select :payable_on, :collection => Fee.payable_dates.map{|f| [f,f.humanize]}    
  %tr
    %td
      Fee amount
    %td
      = text_field :amount
  %tr
    %td
      Fees percentage
    %td
      = text_field :percentage
  %tr
    %td
      Minimum payable
    %td
      = text_field :min_amount
  %tr
    %td
      Maximum payable
    %td
      = text_field :max_amount
  %tr
    %td
      Round to nearest
    %td
      = text_field :round_to
  %tr
    %td
      Rounding Style
    %td
      = select :rounding_style, :collection => ["round", "ceil", "floor"], :selected => @fee.rounding_style.to_s

