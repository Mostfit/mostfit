.graph.shaded
  = ofc2(550, 350, url(:graph_data, :action => 'total', :scope_unit => 'months', :scope_size => 3) )
%h1 Overview of all branches
%p.menu-strip
  = link_to_with_rights 'create a new branch', resource(:branches, :new), :class => "add"
- if @branches.blank?
  %p
    %i No branches have been created yet.
- else
  %table.shaded
    %thead
      %tr
        %th
        %th ID
        %th Name
        %th Manager
        %th Area
        %th Centers
        %th Edit | Delete
    %tbody
    - for branch in @branches
      %tr{ :class => cycle('odd','') }
        %td &nbsp;
        %td
          = branch.id
        %td
          %b= link_to branch.name, resource(branch)
        %td
          = link_to branch.manager.name, resource(branch.manager)
        %td
          = link_to branch.area.name, resource(branch.area) if branch.area
        %td
          %b= branch.centers.size
          == (#{link_to 'view', resource(branch, :centers)})
        %td
          = link_to 'edit', resource(branch, :edit)
          &nbsp;|&nbsp
          = link_to 'new center', resource(branch, :centers, :new)

    %tfoot
      %tr
        %td{ :colspan => 7 }
  = paginate @branches
