%xml
  %region
    - if @region
      %id #{@region.id}
      %name #{@region.name}
      %address #{@region.address}
      %contact_number #{@region.contact_number}
      %landmark #{@region.landmark}
      %creation_date #{@region.creation_date}
      %manager_id #{@region.manager_id}
      - if @region.areas
        = @region.areas.to_xml