%h1
  =@rule.name

%table
  %tr
    %td
      Applicable on
    %td
      %b= @rule.model_name
  %tr
    %td
      On action
    %td
      %b= @rule.on_action
  %tr
    %td
      Pre-condition
    %td
      - if Marshal.restore(@rule.precondition)
        - Marshal.restore(@rule.precondition).each do |key, value|
          = value[:keys]
          = value[:comparator]
          = value[:value]  %tr
  %tr
    %td
      Condition
    %td
      - if Marshal.restore(@rule.condition)
        - Marshal.restore(@rule.condition).each do |key, value|
          = value[:keys]
          = value[:comparator]
          = value[:value]
  %tr
    %td
      Allow this condition?
    %td
      = @rule.permit

= link_to 'Edit',  url(:edit_rule,  @rule)
|
= link_to 'Back', url(:rules)
