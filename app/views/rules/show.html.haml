%h1
  =@rule.name

%table
  %tr
    %td
      Applicable on
    %td
      %b= @rule.model_name
  %tr
    %td
      On action
    %td
      %b= @rule.on_action
  %tr
    %td
      Condition
    %td
      - @rule.conditions.each do |condition|
        = condition.keys
        = condition.comparator
        = condition.value
  %tr
    %td
      Allow this condition?
    %td
      = @rule.permit

= link_to 'Edit',  url(:edit_rule,  @rule)
|
= link_to 'Back', url(:rules)
