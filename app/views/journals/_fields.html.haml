%table
  %tr
    %td
      Journal Type
    %td
      =select :name => "journal[journal_type_id]", :collection => JournalType.all.map{|x| [x.id, x.name]}, :prompt=> "Select Journal"
  %tr
    %td
      Credit account
    %td
      =select :name => "credit_account[account_id]", :collection => Account.all(:branch => @branch).map{|x| [x.id, x.name]}
  %tr
    %td
      Debit account
    %td
      =select :name => "debit_account[account_id]", :collection => Account.all(:branch => @branch).map{|x| [x.id, x.name]}
  %tr
    %td
      Amount
    %td
      =text_field :name => "journal[amount]"
  %tr
    %td
      Comment
    %td
      =text_field :name => "journal[comment]"
  %tr
    %td
      TXN ID
    %td
      =text_field :name => "journal[transaction_id]"
%p
  = submit "Create"
