%table
  %tr
    %th
      Date
    %th 
      Journal ID  
    %th 
      Debit Account
    %th 
      Credit Account
    %th 
      Amount
    %th 
      TXN ID
    %th 
      Comment
  - @account.postings.journals(:order => [:date.desc], :order => [:id.desc]).each do |journal|
    - postings = journal.postings.sort_by{|x| x.amount}
    %tr
      %td
        = journal.created_at.strftime("%Y/%m/%d")
      %td 
        = journal.id
      %td 
        = postings.first.account.name
      %td 
        = postings.last.account.name
      %td 
        = postings.first.amount.abs
      %td 
        = journal.transaction_id 
      %td 
        = journal.comment
