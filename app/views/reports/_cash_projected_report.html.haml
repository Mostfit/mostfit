=partial :form
%table.report.nojs#branch
  %tr.header
    %th
      Branch
    %th{:colspan => "2"}
      Disbursals delayed
    %th{:colspan => "2"}
      Disbursals scheduled
    %th{:colspan => "3"}
      Repayments
  %tr.header
    %th
    %th
      Applied
    %th
      Sanctioned
    %th
      Applied
    %th
      Sanctioned
    %th
      Principal
    %th
      Interest
    %th
      Total
  - @data.sort_by{|k,v| k}.each do |date, values| 
    - next if values.empty?
    %tr
      %th{:colspan => 8}
        = date
    - item = params[:cash_projected_report][:branch_id].blank? ?  Branch : Center
    - values.map{|k,v| [item.get(k), v]}.to_hash.sort_by{|k,v| k.name}.each do |b,_v|
      - prin = _v[:principal_expected_to_be_received]
      - int = _v[:interest_expected_to_be_received]
      - next if prin + int == 0
      %tr
        %td
          = b.name if b
        - Loan.all(:scheduled_disbursal_date.lt => date, :approved_on.not => nil, :disbursal_date => nil, "c_#{item.to_s.snake_case}_id".to_sym => b.id).aggregate(:amount_applied_for.sum, :amount_sanctioned.sum).each do |x|
          %td
            = x.to_currency || 0.00
        - Loan.all(:scheduled_disbursal_date => date, :approved_on.not => nil, "c_#{item.to_s.snake_case}_id".to_sym => b.id).aggregate(:amount_applied_for.sum, :amount_sanctioned.sum).each do |x|
          %td
            = x.to_currency || 0.00
        %td
          = prin.to_currency
        %td
          = int.to_currency
        %td
          = (prin + int).to_currency

                
        
  