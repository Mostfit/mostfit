= partial :form
%table.report.nojs
  %tr.header
    %th 
      Funders
    %th{:colspan => "3"}
      Portfolio
  %tr.header
    %th
    %th
      Date of Allocation
    %th
      Allocated Value
    %th
      Present Value
  - funder_id = nil
  - length = 4
  - org_total = []
  - branch_total = [0,0]
  - @data.sort_by{|funder, data| funder.name}.each do |funder, data|
    - if data.length > 0
      %tr
        %td
          %b
            = funder.name
        %td
          = data[0][5]
        %td
          = (data[0][3] || 0).to_currency
        %td
          = (data[0][4] || 0).to_currency
    - org_total.push(branch_total) 
  %tr.org_total
    %td
      %b Total
    - branch_total.each do |ele|
      %td
        %b
          = ele.to_currency
          
