- if ["PerformanceReport"].include?(params[:report_type])
  = partial "#{params[:report_type].snake_case.gsub(" ","_")}"
- elsif @reports
  %h1
    = params[:report_type]
  - @reports.each do |report|
    = link_to "#{report.name}", url(:show_report, params[:report_type], report.id)
    %br
- else
  %h1
    =@report.name
  - if not params[:layout] 
    = link_to("Printer friendly version", get_printer_url, {:style => "float: right;", :target => "_BLANK"})
  = partial "#{params[:report_type].snake_case.gsub(" ","_")}".to_sym

