- form_url = resource(:stock_registers, {:return => params[:return]})
= error_messages_for @stock_register

= form_for(@stock_register, :action => form_url, :class => "") do
  
  %fieldset
    = partial "stock_registers/fields"
    = submit "Submit Details"
    - if @branch
      = link_to 'Cancel', url(:quick_link, "branches", @branch.id)
    - else
      = link_to 'Cancel', url(:stock_registers)
